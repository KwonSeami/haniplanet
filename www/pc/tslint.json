{
  "extends": [
    "tslint:recommended",
    "tslint-react-recommended",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "rules": {
    "no-implicit-dependencies": false,
    "no-submodule-imports": false,
    "no-extra-boolean-cast": false,
    "no-shadowed-variable": [
      false,
      {
        "class": false,
        "function": false,
        "import": false,
        "enum": false
      }
    ],
    "no-unnecessary-else": false,
    "ter-indent": [true, 2],
    "semicolon": [true, "always"],
    "react-hooks-nesting": "warning"
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "linterOptions": {
    "exclude": [
      ".next",
      "dists",
      "legacy",
      "node_modules",
      "src/components/watermark/*",
      "src/**/__tests__"
    ]
  }
}